                                 <% if @postd.errors.any? %>
                                   <div class = "alert alert-danger">
                                     <h5><%= t('common.errors') %></h5>
                                     <ul>
                                       <% @postd.errors.full_messages.each do |message| %>
                                         <li><%= message %></li>
                                       <% end %>
                                     </ul>
                                   </div>
                                 <% end %>

                                 <%= form_for @postd, html: {multipart: true} do |f| %>
                                   <div class = "form-group">
                                     <%= f.label 'Название' %>
                                     <%= f.text_field :title, class: 'form-control' %>
                                   </div>

                                   <div class = "form-group">
                                     <%= f.label 'Описание' %>
                                     <%= f.text_area :body, class: 'form-control' %>
                                   </div>

                                   <div class = "form-group">
                                     <%= f.file_field :image %>
                                   </div>


                                   <div class = "form-group">
                                     <%= f.submit 'Сохранить', class: 'btn btn-primary' %>
                                     <%= link_to 'Назад', :back, class: 'btn btn-outline-secondary' %>
                                   </div>
                                 <% end %>